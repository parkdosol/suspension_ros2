<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="wheel" params="name parent x_pos y_pos">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder length="0.1" radius="0.2"/>  <!-- 바퀴 크기 -->
        </geometry>
        <material name="dark_red"/>  <!-- 바퀴 색상 변경 -->
      </visual>
    </link>

    <!-- 바퀴를 차체와 수직으로 연결 -->
    <joint name="${name}_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${name}"/>
      <origin xyz="${x_pos} ${y_pos} -0.2" rpy="1.57 0 0"/>  <!-- 바퀴를 수직으로 회전 -->
      <axis xyz="0 0 1"/>  <!-- z축 기준으로 회전 -->
    </joint>
  </xacro:macro>

</robot>
